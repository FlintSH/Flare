#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Format staged files
echo "ğŸ” Formatting staged files..."
bunx lint-staged

# Stage the formatted files
git add .

# Run a final check
echo "âœ¨ Running final format check..."
bunx prettier --check "**/*.{ts,tsx,js,jsx,json,md}" || (
    echo "âŒ Formatting check failed. Please commit again."
    exit 1
)
