#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Format staged files
echo "ğŸ” Formatting staged files..."
bunx lint-staged

# Stage the formatted files
git add .

# Run a lint check
echo "ğŸ§¹ Running lint check..."
bun lint || (
    echo "âŒ Lint check failed. Please fix the issues and commit again."
    exit 1
)

# Run formatter and auto-fix any issues
echo "âœ¨ Running formatter and auto-fixing..."
bunx prettier --write "**/*.{ts,tsx,js,jsx,json,md}"

# Stage any newly formatted files
git add .

# Run a final format check to ensure everything is properly formatted
echo "ğŸ” Verifying format..."
bunx prettier --check "**/*.{ts,tsx,js,jsx,json,md}" || (
    echo "âŒ Formatting verification failed. Please commit again."
    exit 1
)
